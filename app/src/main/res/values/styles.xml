<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>


    <style name="Widget" parent="@android:style/Widget"/>
    <style name="Widget.Button" parent="@android:style/Widget.Button"/>
    <style name="Widget.Button.Transparent" >
        <item name="android:background">@drawable/btnlogin_shape</item>
        <item name="@android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
    
    <style name="DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="EditTextLoginTheme" parent="AppTheme">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>
    <style name="AppThemeCustom" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
